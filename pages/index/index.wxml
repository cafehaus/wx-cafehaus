<view class="page">
  <view class="list-box">
    <view
      class="item"
      wx:for="{{ list }}"
      wx:key="index"
      id="{{ item.id }}"
      data-id="{{ item.id }}"
      bindtap="goto" 
    >
      <!-- <image class="pic" src="{{ item.pic }}" mode="aspectFill" /> -->
      <text class="iconfont icon-{{item.icon}}" />

      <view class="info">
        <view class="name">
          {{ item.title }}
        </view>
        <view class="des">
          {{ item.des }} 
        </view>
      </view>
    </view>
  </view>

  <view class="ad-box">
    <ad unit-id="adunit-5f8609462bc68236"></ad>
  </view>
</view>
