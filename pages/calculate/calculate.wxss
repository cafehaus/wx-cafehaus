.page {
  background: #FFF;
}

.header {
  margin: 0 100rpx;
  padding: 60rpx 40rpx;
  background: #57bc78;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #FFF;
}

.header .label {
  font-size: 36rpx;
}

.label {
  font-size: 32rpx;
  font-weight: 500;
}

.unit {
  font-size: 28rpx;
  color: #999;
}

.action {
  display: flex;
  align-items: center;
  text-align: center;
}

.action input {
  font-size: 56rpx;
  font-weight: 600;
}

.action .iconfont {
  font-size: 54rpx;
  display: inline-block;
  padding: 20rpx 40rpx;
}

.item {
  margin: 60rpx 100rpx;
  padding: 0 40rpx ;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item .action {
  color: #57bc78;
}

.drink {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  color: #999;
}

.drink .info {
  font-size: 80rpx;
  font-weight: 900;
  /* color: #ff467efa; */
}